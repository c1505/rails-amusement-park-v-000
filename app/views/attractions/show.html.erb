<h1>Attractions#show</h1>
<p>Name: <%= @attraction.name %></p>
<p>Tickets Required: <%= @attraction.tickets %></p>
<p>nausea_rating: <%= @attraction.nausea_rating %></p>
<p>happiness_rating: <%= @attraction.happiness_rating %></p>
<p>min_height: <%= @attraction.min_height %></p>

<%= form_tag("/ride", method: "post") do  %>
  <%= hidden_field_tag(:attraction_id, @attraction.id) %>

  <%= submit_tag("Go on this ride") %>
<% end %>

<% if @user.admin? %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% end %>
